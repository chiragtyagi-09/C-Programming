#include<stdio.h>

int main()
{
     int n,p;
     printf("\nPress 1 to print number or Press 2 to print *  : ");
     scanf("%d",&p);
     printf("\nEnter a number how many times you want to print : ");
     scanf("%d",&n);

    

       if(p==1) {
            for (int i = 1; i <= n; i++) {
                for (int j = 1; j <= i; j++) {
                    printf("%d",j);
                }

                printf("\n");

            }
        }


        if(p==2) {
            for (int i = 1; i <= n; i++) {
                for (int j = 1; j <= i; j++) {
                    printf("* ");
                }

                printf("\n");

            }
        }
return 0;
}
 
