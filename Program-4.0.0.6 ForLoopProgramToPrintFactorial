#include <stdio.h>

int main()
{
    int i,n;
    int factorial = 1;
    
    printf("\nEnter positive integer : ");
    scanf("%d",&n);

    if( n < 0 )
    {
       printf("Error! Factorial of a negative number doesn't exist.");
    }
    else
    {
       for( i=1; i<=n; ++i)
       {
         factorial = factorial * i;     
       }
        printf("\nFactorial of %d = %d\n",n,factorial);
    }

return 0; 
}
